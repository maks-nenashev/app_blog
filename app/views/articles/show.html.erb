<% provide :page_title, 'Article has been created!!!' %> <!Podpis w ikonke "Kakaja stranica">

<!3 Wywodim bazu po ID>
<h3><%= t'.thanks'%></h3>
<h4><%= t'.create'%></h4>

 <p class="mb-2"><%= @article.title %></p>

 <p class="lead my-3"><%= @article.text %></p>

             <! Podkluchenie time pod soobzheniem!>
  <time datetime="<%= @article.created_at.strftime("%Y-%m-%d %H:%M:%S")%>">
  <%= @article.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </time>  

<!/////////////////////////////////////////////////////////////////////////////////////////>
  <hr class="my-3">
<h4><%= t'.write'%></h4>
  
                      <!Dobawil Comment>
 <%= form_with model: [@article, @comment] do |f| %>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">                     <! Walidacija CSS ---required: true, minlength:2,>
      <%= f.text_area :body, class: 'form-control', required: true, minlength:2%>
    </div>
  </div>

  <%= f.submit "Submit comment!", class: 'btn btn-primary' %>
<% end %>
<!/////////////////////////////////////////////////////////////////////////////////////>
<h4 class="mt-5"><%= t'.comment'%></h4>
<%= paginate @comments %> <!Page "gem kamenary" razbiw na stranicy # Podkluchenie  "Commint">
<br>
<% @comments.each do |comment| %>
  <article class="mb-3 card" id="comment-<!%= comment.id %>">
      <div class="card-body">
           <! Podkluchenie time pod soobzheniem!>
  <time datetime="<%= @article.created_at.strftime("%Y-%m-%d %H:%M:%S")%>">
  <%= @article.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </time>  
         
         <section class="card-text">
                  <p>
                    <%= comment.body %>
                  </p>
         </section>
              
 
 <%= link_to  "Edit article", edit_article_comment_path(@article,comment),class: "btn btn-secondary btn-sm"%> 
 <%= link_to 'Delete', article_comment_path(@article, comment), class: 'btn btn-danger btn-sm',
      data: {method: :delete, confirm: "Are you sure?"} %>
   </div>
 </article>
<%end%>