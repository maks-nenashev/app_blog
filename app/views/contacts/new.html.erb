<% provide :page_title, 'Contact' %> <!Podpis w ikonke "Kakaja stranica">
<br>
<h2>Contact us</h2>

<%= form_for :contact, url: contacts_path, data: {turbo:false}  do |f| %>

<!///////////////////////////////////////////////////////////////////////////////////////>
<!%= render 'shared/errors', object: @contact %> <!Walidacija - papka shared/_errors>
<!% if @contact && @contact.errors.full_messages.any?%> <!Prowerka! Esli estj ochybka to nepropustit>
<!% end%>
<!///////////////////////////////////////////////////////////////////////////////////////>

<div class="mb-3 row">
<div class="col-sm-2 col-form-label">   
    <%= f.label :email%>
</div>

<div class="col-sm-10">                              <! Walidacija CSS>
    <%= f.text_field :email, placeholder: "Title", class: "form-control"%>
</div>
</div>

<div class="mb-3 row">
<div class="col-sm-2 col-form-label">
    <%= f.label :message %>
</div>

<div class="col-sm-10">    <! Walidacija CSS>
    <%= f.text_area :text, class: "form-control"%>
</div>
</div>

<main class="container">
  <div class="bg-body-tertiary p-5 rounded mt-3">
    <h1>Do not press hard!</h1>
    <p class="lead">If you have any wishes, you can contact us. Or maybe some advice!</p>
    <%= f.submit "Submit Article", class: "btn btn-primary btn-lg"%>
  </div>
</main>
<% end %>