<%= link_to 'commits', "##{html_id}",
  class: 'btn btn-primary', data: {'bs-toggle': 'collapse'} %>

<%= tag.div class: 'collapse', id: html_id do %>
  <%= form_with model: [commentable,(@commit || commentable.commits.build)],
  
  class: 'pt-3 border-top my-2' do |f| %>

      <%= render 'shared/errors', object: @commit %>
    

    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :body %>
      </div>

      <div class="col-sm-10">
        <%= f.text_area :body, class: 'form-control form-control-sm' %>
      </div>
    </div>

    <%= f.submit "Commit", class: 'btn btn-sm btn-primary' %>
  <% end %>
  <%= render commentable.commits.decorate %>
<% end %>